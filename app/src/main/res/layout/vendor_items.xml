<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="5dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    app:cardBackgroundColor="@color/browser_actions_bg_grey">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/id_image_profile"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:contentDescription="@string/profile_image"
                    android:src="@drawable/applogo" />

        <TextView
            android:id="@+id/id_tv_profile_shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_image_profile"
            android:gravity="center_horizontal"
            android:paddingHorizontal="10dp"
            android:text="@string/store_name"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/id_tv_profile_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_tv_profile_shop_name"
                    android:gravity="top|center_horizontal"
                    android:minLines="2"
                    android:paddingHorizontal="10dp"
                    android:text="@string/address"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@id/id_tv_profile_address"
            android:layout_marginTop="5dp"
            android:background="@color/blue" />
        </RelativeLayout>
</androidx.cardview.widget.CardView>
